{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "kcp.variant_list.schema.json",
  "type": "object",
  "required": ["format_version", "policy_id", "base_seed", "variants"],
  "properties": {
    "format_version": {"type": "string", "enum": ["1.0"]},
    "policy_id": {"type": "string"},
    "base_seed": {"type": "integer"},
    "variants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["index", "positive", "negative", "gen_params"],
        "properties": {
          "index": {"type": "integer", "minimum": 0},
          "label": {"type": "string"},
          "positive": {"type": "string"},
          "negative": {"type": "string"},
          "gen_params": {
            "type": "object",
            "required": ["seed", "steps", "cfg", "sampler", "scheduler", "denoise", "width", "height"],
            "properties": {
              "seed": {"type": "integer"},
              "steps": {"type": "integer"},
              "cfg": {"type": "number"},
              "sampler": {"type": "string"},
              "scheduler": {"type": "string"},
              "denoise": {"type": "number"},
              "width": {"type": "integer"},
              "height": {"type": "integer"}
            },
            "additionalProperties": true
          },
          "control_refs": {"type": "object", "additionalProperties": true}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
